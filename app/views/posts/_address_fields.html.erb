<div class="nested-fields">
  <div class="row">
      <div class="four columns">
        <%= f.label 'Street*' %>
        <%= f.text_field :street, :class=>"u-full-width", :required=>true %>
      </div>

      <div class="three columns">
        <%= f.label 'City*' %>
        <%= f.text_field :city, :class=>"u-full-width", :required=>true %>
      </div>

      <div class="two columns">
        <%= f.label 'State*' %>
        <%= f.text_field :state, :class=>"u-full-width", :required=>true %>
      </div>

      <div class="two columns">
        <%= f.label :zip %>
        <%= f.text_field :zip, :value=>"", :class=>"u-full-width" %>
      </div>

      <div class="one column">
        <%if !local_assigns[:init_field]%>
          <%= link_to_remove_association('<i class="fa fa-minus-circle" aria-hidden="true"></i>'.html_safe, f, :class=>"remove-detour") %>
        <%elsif local_assigns[:editing] && local_assigns[:i]>1 %>
          <%= link_to_remove_association('<i class="fa fa-minus-circle" aria-hidden="true"></i>'.html_safe, f, :class=>"remove-detour") %>
        <%end%>
      </div>
  </div>
</div>