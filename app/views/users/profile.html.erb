<body>
<span class="profile-info">
	<div class="profile-photo"></div>
	<div class="profile-name"><%= first_letter_uppercase current_user.firstName%> <%= current_user.lastName%></div>

	<div class="container">
		<div class="row">
			<div class="one-half column">
				<i class="fa fa-car" aria-hidden="true"></i> Trips<br>0
			</div>
			<div class="one-half column">
				<i class="fa fa-file-text-o" aria-hidden="true"></i> Posts<br><%= current_user.posts.count %>
			</div>
		</div>
	</div>

	<div class="rating">
		<i class="fa fa-star-o" aria-hidden="true"></i> 
		<i class="fa fa-star-o" aria-hidden="true"></i> 
		<i class="fa fa-star-o" aria-hidden="true"></i> 
		<i class="fa fa-star-o" aria-hidden="true"></i> 
		<i class="fa fa-star-o" aria-hidden="true"></i> 
	</div>
</span>
<%= link_to "New Post", new_post_url, :class=>"button special"%>
<%= link_to "Edit", edit_user_registration_path, :class=>"button special" %>

<div class="container">	
		<div class="container" id="user-info">	
			<div class="row">
				<div class="four columns selected" id="profile">
					Profile
				</div>
				<div class="four columns" id="posts">
					Posts
				</div>
				<div class="four columns" id="trips">
					Trips
				</div>
			</div>
			
			<div class="row">
				<div id="show-info">
					<div class="row">
						First Name:  
						<%= @current_user.firstName%><br>
						Last Name:  
						<%= @current_user.lastName()%>
					</div>
				</div>
			</div>

			<div class="row">
				<div id="show-info">
					<div class="row">
					  		These are your posts:
					  		<div class ="row">
									<% Post.where(:user_id => @current_user.id()).each do |p| %>
									<div> Title: <%= p.title %> </div><br>
									<div> Time Created: <%=p.created_at %></div>
									<div><%= link_to 'View Post', post_path(p) %> </div>
 									<%end%>
							</div>
					</div>
				</div>
			</div>

			<div class="row">
				<div id="trips-info">
					
				</div>
			</div>

			<script type="text/javascript">
				$("#profile").click(function() {
					$("#posts").removeClass("selected");
					$("#trips").removeClass("selected");
					$("#post-info").hide();
					$("#trips-info").hide();
					$("#show-info").show();
					$(this).addClass("selected");
				});
				$("#posts").click(function() {
					$("#profile").removeClass("selected");
					$("#trips").removeClass("selected");
					$("#trips-info").hide();
					$("#show-info").hide();
					$("#post-info").show();
					$(this).addClass("selected");
				});

				$("#trips").click(function() {
					$("#posts").removeClass("selected");
					$("#profile").removeClass("selected");
					$("#post-info").hide();
					$("#show-info").hide();
					$("#trips-info").show();
					$(this).addClass("selected");
				});
			</script>
		</div>
</div>
</div>
</body>