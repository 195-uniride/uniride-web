<body class = "devise-wrapper">

<div class="container">
  <div class="row">
    <div class="twelve columns">
      <span class = "uniride-heading">UniRide</span>
    </div>
  </div>
</div>
<%= devise_error_messages! %>

<div class = "container devise-form">

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name, html: {multipart: true})) do |f| %>

  <div class="row">
    <div class="twelve columns">
    <%= f.label :email, :style=>"text-align: left" %>
    <%= f.email_field :email, autofocus: true, :style=>"color:#167fa0" %>
    </div>
  </div>

  <div class="row">
    <div class="twelve columns">
    <%= f.label "First Name", :style=>"text-align: left" %>
    <%= f.text_field :firstName, :style=>"color:#167fa0" %>
    </div>
  </div>

  <div class="row">
    <div class="twelve columns">
    <%= f.label "Last Name", :style=>"text-align: left" %>
    <%= f.text_field :lastName, :style=>"color:#167fa0" %>
    </div>
  </div> 

  <div class="row">
    <div class="twelve columns">
    <%= f.label "Profile Photo", :style=>"text-align: left" %>
    <%= f.file_field :avatar, :style=>"color:#167fa0" %>
    </div>
  </div>

  <div class="row">
    <div class="twelve columns">
    <%= f.label :password, :style=>"text-align: left" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", :style=>"color:#167fa0" %>
    </div>
  </div>

  <div class="row">
    <div class="twelve columns">
    <%= f.label :password_confirmation, :style=>"text-align: left" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", :style=>"color:#167fa0" %>
    </div>
  </div>

  <%= f.submit "Sign up", :class=>"button-primary"  %>
<% end %>
<span class="twelve columns line"></span>
<%= link_to "Sign In", log_in_url, :class=>"button"%>

</div>

</body>
