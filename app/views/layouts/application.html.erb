<!DOCTYPE html>
<html>
  <head>
    <title>Uniride</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans|Open+Sans" rel="stylesheet">
  </head>

  <body class="special">
  <%if user_signed_in? %>
  <div class="container-nav">
      <div class="row">
        <div class="four columns">
          <%=link_to 'UniRide', root_url, :class=>"uniride-nav u-pull-left" %></div>
        <div class="two columns">
          <span class="nav-element">
            <%= link_to'Feed', posts_url, :class => "nav-element" %>
          </span>
        </div>
        <div class="two columns">
          <%= link_to'Profile', profile_url, :class => "nav-element" %>
        </div>
        <div class="two columns">
          <%= link_to 'Inbox', mailbox_inbox_path, :class=>"nav-element" %>
        </div>
        <div class="two columns">
          <%= link_to'Search', search_path, :class => "nav-element" %>
        </div>
      </div>
  </div>

  <div class="create-margin"></div>
  <%end%>
  
  <% unless user_signed_in?%> 
    <% if notice %>
  	  <div class="alert-notice"><p class="notice"><%= notice %></p></div>
    <% end %>
  <% end %>

  <% if alert %>
    <div class="alert-error"><p class="alert">
    <button class="close"> Ã— </button>
    <%= alert %>
    <script>      
      $(".close").click(function(){
        $(".alert-error").hide();
      });
    </script>
    </p></div>
  <% end %>

  <%= yield %>
  </body>
</html>
